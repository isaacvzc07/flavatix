# FlavorWheel Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=FlavorWheel
NEXT_PUBLIC_APP_VERSION=0.1.0

# Database Configuration (when implemented)
DATABASE_URL=your_database_connection_string_here
DATABASE_NAME=flavorwheel_db

# Authentication (when implemented)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# API Keys (when implemented)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Email Configuration (when implemented)
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_username_here
SMTP_PASS=your_smtp_password_here

# File Upload Configuration (when implemented)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000